page{
    background: #fff;
}

.buy-item{
    padding: 20rpx 30rpx;
    margin: 20rpx;
    background: #FFF9F6;
    color: #FE5D21;
    font-size: 28rpx;
}
.buy-item .mes{
  margin-right: 10rpx;
  font-size: 28rpx;
  flex: 1;
  border-right: 1px solid #FE5D21;
  color: #000000;
}
.buy-item .title{
  color:#000000;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 4rpx;
}
.buy-item .original-price{
    text-decoration: line-through;
    font-size: 13px;
}
.buy-btn{
    width:160rpx;
    font-size: 28rpx;
    color: #FE5D21;
    text-align: right;
}

.buy-item .active-price{
    font-size: 42rpx;
}
.buy-item .active-price text{
  font-size: 26rpx;
}
.buy-item.disable{
  opacity: 0.6;
}


/*  */
.messsage{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  
  .messsage .title{
    font-size: 20px;
    color: #000;
    flex: 1;
  }
  
  .messsage button{
    width: 180rpx !important;
  }
  
  .cu-card>.cu-item{
    margin-top: 0 !important;
  }
  
  
  .item{
    position: relative;
    margin: 20rpx;
    border-radius: 20rpx;
    overflow: hidden;
    background-color: #303030;
    height: 318rpx;
    overflow: hidden;
  }
  .item .cover{
    width: 100%;
    height: 100%;
  }
  
  .message{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 20rpx;
    color: #fff;
    font-size:26rpx;
  }
  .message .title{
    font-size: 32rpx;
    font-weight: bold;
  }
  
  .item .cu-tag{
    position: absolute;
    right: 0;
  }
  
  .item .cu-btn{
    margin: 0;
    font-size: 13px;
    width:160rpx;
  }

  .details{
      color: #1E1E1E;
      font-size: 28rpx;
  }

  checkbox{
    margin-right: 20rpx;
  }


  .check-icon{
    margin-right: 20rpx;
    width: 40rpx;
    height: 40rpx;
  }

  .share-btn{
    position: absolute;
    top: 0;
    right: 0;
    padding: 0 !important;
    margin: 0 !important;
    width: 200rpx !important;
    height: 60rpx !important;
    border-radius: 0 !important;
    background: none !important;
  }
  .share-btn image{
    width: 100%;
    height: 100%;
  }