.messsage{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.messsage .title{
  font-size: 20px;
  color: #000;
  flex: 1;
}

.messsage button{
  width: 180rpx !important;
}

.cu-card>.cu-item{
  margin-top: 0 !important;
}


.item{
  margin: 30rpx;
  position: relative;
  /* background-image: url('https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg'); */
  background-color: #fff;
  height: 340rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.item .cover{
  width: 100%;
  height: 100%;
}

.message{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx;
}

.item .cu-tag{
  position: absolute;
  right: 0;
}

.item .cu-btn{
  margin: 0;
  font-size: 13px;
  width:160rpx;
}