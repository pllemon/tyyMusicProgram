
.cu-card>.cu-item{
  margin-top: 0 !important;
}

.item{
  margin: 30rpx;
  position: relative;
  background-color: #303030;
  height: 320rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.item .cover{
  width: 100%;
  height: 100%;
}

.message{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx;
}
.time{
  position: absolute;
  top: 0;
  right: 0;
  padding: 20rpx;
}

.item .cu-tag{
  position: absolute;
  right: 0;
}

.item .cu-btn{
  margin: 0;
  font-size: 32rpx;
  width: 200rpx;
  height: 60rpx;
  background: linear-gradient(180deg, #4299FC 0%, #0364E5 100%);
  color: #fff;
}

.item .title{
  font-weight: bold;
  font-size: 32rpx;
  flex: 1;
}