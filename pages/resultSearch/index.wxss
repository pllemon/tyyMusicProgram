.title{
  font-size: 36rpx;
  color: #1F1C17;
  font-weight: bold;  
  text-align: center;
}

.input{
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
    border-bottom: 1px solid #eee;
    margin-bottom: 30rpx;
    font-size: 16px;
}

.match-item, .match-item2{
    padding: 30rpx;
    border-top: 1px solid #eee;
    line-height: 1.8;
    color: #A5A5A5;
    font-size: 32rpx;
    display: flex;
    align-items: center;
    padding: 30rpx 60rpx;
}
.match-item .name{
    color: #1E1E1E;
    flex: 1;
}

.match-item2{
    display: block;
}
.match-item2 .row{
    display: flex;
}
.match-item2 .row view:first-child{
    color: #1E1E1E;
}
.match-item2 .row view:last-child{
    flex: 1;
    text-align: right;
}

.submit-btn{
    background: #fff !important;
    color: #3A7FE2 !important;
    border: 1px solid #3A7FE2 !important;
    width: 360rpx !important;
    margin: 0 auto;
}

.part-title{
    color: #1E1E1E;
    font-size: 32rpx;
    font-weight: bold;
    padding-left: 30rpx;
}