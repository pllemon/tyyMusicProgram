<view class="page-content">
    <scroll-view class="main-content" scroll-top="{{scrollTop}}" scroll-y="{{true}}">
        <view class="cu-card article" :class="isCard?'no-card':''">
            <view class="cu-item shadow">
                <view class="title"><view class="text-cut text-xl">24届秋叶钢琴杯总决赛</view></view>
                <view class="content">
                    <image src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg"
                        mode="aspectFill"></image>
                    <view class="desc">
                        <view class="text-content">
                            <view>开始时间：2012-12-12 12:12</view>
                            <view>结束时间：2012-12-12 12:12</view>
                        </view>
                        <view>
                            <view class="cu-tag bg-mauve light round">选拔赛</view>
                        </view>
                    </view>
                </view>
            </view>
        </view>

        <van-cell-group>
            <view wx:for="{{form.signupInfo}}">
                <van-cell>
                    <text slot="title" class="text-black text-bold text-lg">报名人{{index+1}}</text>
                </van-cell>
                <van-field size="large" required label="报名人" data-key="form.signupInfo[{{index}}].signup_name" value="{{ item.signup_name }}" placeholder="请输入" bind:change="onChange" />
                <van-field size="large" required label="联系方式" type="number" data-key="form.signupInfo[{{index}}].phone" value="{{ item.phone }}" placeholder="请输入" bind:change="onChange" />
                <van-field size="large" required label="身份证号码" type="idcard" data-key="form.signupInfo[{{index}}].peopleid" value="{{ item.peopleid }}" placeholder="请输入" bind:change="onChange" />
            </view>
        </van-cell-group>
    </scroll-view>
    
    <view class="padding flex flex-direction">
        <button class="submit-btn cu-btn bg-cyan lg" bindtap="signUp">立即付费</button>
    </view>
</view>