<view class="page-content">
    <scroll-view class="main-content" scroll-top="{{scrollTop}}" scroll-y="{{true}}">
        <view class="cu-card article" :class="isCard?'no-card':''">
            <view class="cu-item shadow">
                <view class="title"><view class="text-cut text-xl">24届秋叶钢琴杯总决赛</view></view>
                <view class="content">
                    <image src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg"
                        mode="aspectFill"></image>
                    <view class="desc">
                        <view class="text-content">
                            <view>开始时间：2012-12-12 12:12</view>
                            <view>结束时间：2012-12-12 12:12</view>
                        </view>
                        <view>
                            <view class="cu-tag bg-mauve light round">选拔赛</view>
                        </view>
                    </view>
                </view>
            </view>
        </view>

        <van-cell-group>
            <van-field size="large" required label="报名人" data-key="name" value="{{ form.name }}" placeholder="请输入" bind:change="onChange" />
            <van-field size="large" required label="联系方式" data-key="name" value="{{ form.name }}" placeholder="请输入" bind:change="onChange" />
            <van-field size="large" required label="出生年月日" data-key="name" value="{{ form.name }}" placeholder="请输入" bind:change="onChange" />
            <van-field size="large" required label="身份证号码" data-key="name" value="{{ form.name }}" placeholder="请输入" bind:change="onChange" />
            <van-field size="large" required label="指导老师" data-key="name" value="{{ form.name }}" placeholder="请输入" bind:change="onChange" />
        </van-cell-group>

        <van-cell-group>
            <van-field size="large" required label="监护人" data-key="name" value="{{ form.name }}" placeholder="请输入" bind:change="onChange" />
            <van-field size="large" required label="联系方式" data-key="name" value="{{ form.name }}" placeholder="请输入" bind:change="onChange" />
        </van-cell-group>

        <van-cell-group>
            <view wx:for="{{form.music}}">
                <van-cell>
                    <text slot="title" class="text-black text-bold text-lg">参赛曲目{{index+1}}</text>
                    <view slot="right-icon">
                        <view class="text-green action" wx:if="{{index == 0}}" data-idx="{{index}}" bindtap="addMusic">
                            <text class="cuIcon cuIcon-roundadd" /> <text>添加</text>
                        </view>
                        <view class="text-red action" wx:else data-idx="{{index}}" bindtap="delMusic" >
                            <text class="cuIcon cuIcon-roundclose" /> <text>删除</text>
                        </view>
                    </view>
                </van-cell>
                <van-field size="large" required label="名称" data-key="form.music[{{index}}].name" value="{{ item.name }}" placeholder="请输入" bind:change="onChange" />
                <van-field size="large" required label="作者" data-key="form.music[{{index}}].person" value="{{ item.person }}" placeholder="请输入" bind:change="onChange" />
                <van-field size="large" required label="出处" data-key="form.music[{{index}}].region" value="{{ item.region }}" placeholder="请输入" bind:change="onChange" />
            </view>
        </van-cell-group>
    </scroll-view>
    
    <view class="padding flex flex-direction">
        <button class="submit-btn cu-btn bg-cyan lg" bindtap="signUp">立即付费</button>
    </view>
</view>